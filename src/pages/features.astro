---
import BaseLayout from '@/layouts/BaseLayout.astro';
import Header from '@/components/Header.astro';
import Footer from '@/components/Footer.astro';
import PageHero from '@/components/PageHero.astro';
import ContentSection from '@/components/ContentSection.astro';
import FeatureCard from '@/components/FeatureCard.astro';
import CTASection from '@/components/CTASection.astro';
import Button from '@/components/Button.astro';
import InfoBox from '@/components/InfoBox.astro';
import MetricCard from '@/components/MetricCard.astro';

const locale = 'en';
const title = 'Features - Minimal';
const description = 'Discover all the functionalities that will transform your website into an intelligent conversational experience.';
---

<BaseLayout title={title} description={description} locale={locale}>
  <Header locale={locale} />

  <main class="pt-header">
    <PageHero
      title="Minimal Features"
      subtitle="Discover all the functionalities that will transform your website into an intelligent conversational experience."
    />

    <!-- Main Features -->
    <ContentSection>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
        <FeatureCard icon="ü§ñ" title="Advanced Conversational AI">
          <p class="text-[var(--text-tertiary)] leading-relaxed text-[15px]">State-of-the-art natural language processing that understands context and user intentions.</p>
        </FeatureCard>
        <FeatureCard icon="üé®" title="Brand Preservation">
          <p class="text-[var(--text-tertiary)] leading-relaxed text-[15px]">The conversational interface automatically adapts to your website's colors, fonts, and visual style.</p>
        </FeatureCard>
        <FeatureCard icon="‚ö°" title="1-Line Integration">
          <p class="text-[var(--text-tertiary)] leading-relaxed text-[15px]">Ultra-fast implementation that requires only adding one line of JavaScript code to your website.</p>
        </FeatureCard>
        <FeatureCard icon="üìä" title="Intelligent Analytics">
          <p class="text-[var(--text-tertiary)] leading-relaxed text-[15px]">Get deep insights into your users' real intentions and behavior patterns.</p>
        </FeatureCard>
        <FeatureCard icon="üîÑ" title="Automatic Synchronization">
          <p class="text-[var(--text-tertiary)] leading-relaxed text-[15px]">Your website content syncs automatically, allowing AI to always have updated information.</p>
        </FeatureCard>
        <FeatureCard icon="üåç" title="Multi-language Support">
          <p class="text-[var(--text-tertiary)] leading-relaxed text-[15px]">Conversational interface that automatically adapts to your website's language.</p>
