---
import BaseLayout from '@/layouts/BaseLayout.astro';
import Header from '@/components/Header.astro';
import Footer from '@/components/Footer.astro';

const locale = 'en';
const title = 'About Us - Minimal';
const description = 'Transforming how websites interact with their users through conversational artificial intelligence.';
---

<BaseLayout title={title} description={description} locale={locale}>
  <Header locale={locale} />

  <main>
    <section class="hero-section">
      <div class="container">
        <h1>About Us</h1>
        <p class="subtitle">Transforming how websites interact with their users through conversational artificial intelligence.</p>
      </div>
    </section>

    <section class="content-section">
      <div class="container">
        <div class="content-grid">
          <div class="content-block">
            <h2>Our Story</h2>
            <p>Minimal was born from a simple yet revolutionary vision: to transform traditional static websites into intelligent conversational experiences that maintain brand identity while offering completely new interaction.</p>
          </div>

          <div class="content-block">
            <h2>Our Mission</h2>
            <p>Democratizing access to intelligent conversational web experiences, allowing any website to transform into a modern and comprehensive interface without losing its brand identity.</p>
          </div>

          <div class="content-block">
            <h2>Our Vision</h2>
            <p>We envision a future where every website is an intelligent conversational experience, where users can interact naturally with content and where companies gain deep insights into their customers' real needs.</p>
          </div>
        </div>
      </div>
    </section>

    <section class="team-section">
      <div class="container">
        <h2>Our Team</h2>
        <div class="team-grid">
          <div class="team-member">
            <h3>Pablo Wolfus</h3>
            <p class="role">Co-Founder & CEO</p>
            <p>Technology visionary with experience in product and development. Specialized in transforming complex ideas into simple and scalable solutions.</p>
          </div>
          <div class="team-member">
            <h3>Guido Valente</h3>
            <p class="role">Co-Founder & CTO</p>
            <p>Software architect expert in AI and distributed systems. Leads the technical development of our conversational platform.</p>
          </div>
        </div>
      </div>
    </section>
  </main>

  <Footer locale={locale} />
</BaseLayout>

<style>
  main {
    padding-top: 60px;
  }

  .hero-section {
    padding: calc(var(--section-padding-y) + 2rem) var(--section-padding-left) var(--section-padding-y) var(--section-padding-right);
    background: linear-gradient(180deg, #f7fafc 0%, #ffffff 100%);
    text-align: center;
  }

  .hero-section h1 {
    font-size: clamp(2rem, 5vw, 3.5rem);
    margin-bottom: 1.5rem;
  }

  .subtitle {
    font-size: clamp(1.1rem, 2vw, 1.5rem);
    color: var(--text-light);
    max-width: 800px;
    margin: 0 auto;
  }

  .content-section {
    padding: var(--section-padding-y) var(--section-padding-left) var(--section-padding-y) var(--section-padding-right);
  }

  .content-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 3rem;
    max-width: 900px;
    margin: 0 auto;
  }

  .content-block h2 {
    margin-bottom: 1rem;
    color: var(--text-dark);
  }

  .content-block p {
    color: var(--text-light);
    line-height: 1.8;
  }

  .team-section {
    padding: var(--section-padding-y) var(--section-padding-left) var(--section-padding-y) var(--section-padding-right);
    background: var(--bg-light);
  }

  .team-section h2 {
    text-align: center;
    margin-bottom: 3rem;
    font-size: clamp(1.75rem, 4vw, 2.75rem);
  }

  .team-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 2rem;
    max-width: 800px;
    margin: 0 auto;
  }

  .team-member {
    background: white;
    padding: 2rem;
    border-radius: 12px;
    box-shadow: var(--shadow-sm);
  }

  .team-member h3 {
    font-size: 1.5rem;
    margin-bottom: 0.5rem;
  }

  .role {
    color: var(--brand-blue);
    font-weight: 600;
    margin-bottom: 1rem;
  }

  @media (min-width: 768px) {
    .team-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }
</style>
