---
import BaseLayout from '@/layouts/BaseLayout.astro';
import Header from '@/components/Header.astro';
import Footer from '@/components/Footer.astro';

const locale = 'es';
---

<BaseLayout title="Integración - Minimal" description="Integración simple en minutos. Un script, transformación instantánea." locale={locale}>
  <Header locale={locale} />
  <main>
    <section class="hero-section">
      <div class="container">
        <h1>Integración Simple</h1>
        <p class="subtitle">Una línea de código, transformación instantánea. Funciona con cualquier plataforma.</p>
      </div>
    </section>
    <section class="content-section">
      <div class="container">
        <h2>Integración Fácil</h2>
        <p>Agrega Minimal a tu sitio web con solo una línea de código. Compatible con WordPress, Shopify, React, Vue, Angular y cualquier otra plataforma.</p>
        <div class="code-block">
          <code>&lt;script src="https://minimal.lat/embed.js" data-site-id="tu-id"&gt;&lt;/script&gt;</code>
        </div>
      </div>
    </section>
  </main>
  <Footer locale={locale} />
</BaseLayout>

<style>
  main { padding-top: 60px; }
  .hero-section { padding: calc(var(--section-padding-y) + 2rem) var(--section-padding-left) var(--section-padding-y) var(--section-padding-right); background: linear-gradient(180deg, #f7fafc 0%, #ffffff 100%); text-align: center; }
  .hero-section h1 { font-size: clamp(2rem, 5vw, 3.5rem); margin-bottom: 1.5rem; }
  .subtitle { font-size: clamp(1.1rem, 2vw, 1.5rem); color: var(--text-light); max-width: 800px; margin: 0 auto; }
  .content-section { padding: var(--section-padding-y) var(--section-padding-left) var(--section-padding-y) var(--section-padding-right); max-width: 800px; margin: 0 auto; }
  .code-block { background: #1a202c; color: #4ade80; padding: 2rem; border-radius: 8px; overflow-x: auto; margin: 2rem 0; }
  .code-block code { font-family: 'Courier New', monospace; }
</style>
