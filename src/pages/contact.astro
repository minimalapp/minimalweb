---
import BaseLayout from '@/layouts/BaseLayout.astro';
import Header from '@/components/Header.astro';
import Footer from '@/components/Footer.astro';
import PageHero from '@/components/PageHero.astro';
import ContentSection from '@/components/ContentSection.astro';
import SectionTitle from '@/components/SectionTitle.astro';
import FAQ from '@/components/FAQ.astro';
import Button from '@/components/Button.astro';
import InfoCard from '@/components/InfoCard.astro';

const locale = 'en';

const faqItems = [
  {
    question: "How quickly can I expect a response?",
    answer: "<p>We typically respond to all inquiries within 24 hours during business days. For technical support requests, our average response time is under 2 hours. Urgent issues are prioritized and handled immediately.</p>"
  },
  {
    question: "Can I schedule a demo of Minimal?",
    answer: "<p>Absolutely! Select \"Request Demo\" from the subject dropdown when filling out the contact form. Our team will reach out to schedule a personalized demo at your convenience. We'll walk you through all features and answer any questions you have.</p>"
  },
  {
    question: "Do you offer custom enterprise solutions?",
    answer: "<p>Yes! We provide custom enterprise solutions with dedicated support, custom integrations, and SLA guarantees. Select \"Partnership Opportunity\" in the contact form, and our enterprise team will discuss your specific requirements and create a tailored solution.</p>"
  },
  {
    question: "What information should I include in my support request?",
    answer: `<p>To help us assist you quickly, please include:</p>
      <ul>
        <li>Your website URL and Site ID</li>
        <li>Browser and device information</li>
        <li>Detailed description of the issue</li>
        <li>Screenshots or screen recordings if applicable</li>
        <li>Any error messages you're seeing</li>
      </ul>`
  },
  {
    question: "Is there a phone number I can call?",
    answer: "<p>We primarily support customers through email to ensure quality responses. For enterprise customers, we provide dedicated phone support as part of your plan. Contact us at hello@minimal.lat to discuss your needs.</p>"
  }
];
---

<BaseLayout title="Contact - Minimal" description="Get in touch with the Minimal team." locale={locale}>
  <Header locale={locale} />

  <main class="pt-header">
    <PageHero
      title="Contact Us"
      subtitle="Have questions? We'd love to hear from you. Send us a message and we'll respond as soon as possible."
    />

    <ContentSection>
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 lg:gap-12 items-start">
        <!-- Form -->
        <div>
          <SectionTitle title="Send us a Message" size="md" spacing="normal" />
          <form class="flex flex-col gap-6" id="contact-form">
            <div class="flex flex-col gap-2">
              <label for="full_name" class="text-[var(--text-primary)] text-base font-semibold">Full Name *</label>
              <input type="text" id="full_name" name="full_name" placeholder="John Doe" required
                class="px-6 py-4 min-h-[52px] border-2 border-[var(--border-primary)] rounded-lg text-base bg-[var(--bg-primary)] text-[var(--text-primary)] transition-all duration-200 shadow-sm focus:outline-none focus:border-[var(--brand-purple-primary)] focus:shadow-[0_0_0_3px_rgba(99,102,241,0.1)]" />
            </div>

            <div class="flex flex-col gap-2">
              <label for="email" class="text-[var(--text-primary)] text-base font-semibold">Email Address *</label>
              <input type="email" id="email" name="email" placeholder="john@example.com" required
                class="px-6 py-4 min-h-[52px] border-2 border-[var(--border-primary)] rounded-lg text-base bg-[var(--bg-primary)] text-[var(--text-primary)] transition-all duration-200 shadow-sm focus:outline-none focus:border-[var(--brand-purple-primary)] focus:shadow-[0_0_0_3px_rgba(99,102,241,0.1)]" />
            </div>

            <div class="flex flex-col gap-2">
              <label for="company" class="text-[var(--text-primary)] text-base font-semibold">Company</label>
              <input type="text" id="company" name="company" placeholder="Your Company Name"
                class="px-6 py-4 min-h-[52px] border-2 border-[var(--border-primary)] rounded-lg text-base bg-[var(--bg-primary)] text-[var(--text-primary)] transition-all duration-200 shadow-sm focus:outline-none focus:border-[var(--brand-purple-primary)] focus:shadow-[0_0_0_3px_rgba(99,102,241,0.1)]" />
            </div>

            <div class="flex flex-col gap-2">
              <label for="website" class="text-[var(--text-primary)] text-base font-semibold">Website</label>
              <input type="url" id="website" name="website" placeholder="https://example.com"
                class="px-6 py-4 min-h-[52px] border-2 border-[var(--border-primary)] rounded-lg text-base bg-[var(--bg-primary)] text-[var(--text-primary)] transition-all duration-200 shadow-sm focus:outline-none focus:border-[var(--brand-purple-primary)] focus:shadow-[0_0_0_3px_rgba(99,102,241,0.1)]" />
            </div>

            <div class="flex flex-col gap-2">
              <label for="subject" class="text-[var(--text-primary)] text-base font-semibold">Subject *</label>
              <select id="subject" name="subject" required
                class="px-6 py-4 min-h-[52px] border-2 border-[var(--border-primary)] rounded-lg text-base bg-[var(--bg-primary)] text-[var(--text-primary)] transition-all duration-200 shadow-sm cursor-pointer appearance-none bg-[url('data:image/svg+xml,%3Csvg%20xmlns=%22http://www.w3.org/2000/svg%22%20width=%2224%22%20height=%2224%22%20viewBox=%220%200%2024%2024%22%20fill=%22none%22%20stroke=%22%236b7280%22%20stroke-width=%222%22%3E%3Cpolyline%20points=%226%209%2012%2015%2018%209%22%3E%3C/polyline%3E%3C/svg%3E')] bg-no-repeat bg-[right_12px_center] bg-[length:20px] pr-12 focus:outline-none focus:border-[var(--brand-purple-primary)] focus:shadow-[0_0_0_3px_rgba(99,102,241,0.1)]">
                <option value="">Select an option</option>
                <option value="demo">Request Demo</option>
                <option value="pricing">Pricing Information</option>
                <option value="integration">Integration Question</option>
                <option value="support">Technical Support</option>
                <option value="partnership">Partnership Opportunity</option>
                <option value="other">Other</option>
              </select>
            </div>

            <div class="flex flex-col gap-2">
              <label for="message" class="text-[var(--text-primary)] text-base font-semibold">Message *</label>
              <textarea id="message" name="message" placeholder="Tell us how we can help..." rows="6" required minlength="10"
                class="px-6 py-4 min-h-[150px] border-2 border-[var(--border-primary)] rounded-lg text-base bg-[var(--bg-primary)] text-[var(--text-primary)] transition-all duration-200 shadow-sm resize-y focus:outline-none focus:border-[var(--brand-purple-primary)] focus:shadow-[0_0_0_3px_rgba(99,102,241,0.1)]"></textarea>
            </div>

            <!-- Form message container -->
            <div id="form-message" class="hidden rounded-lg p-4 text-sm"></div>

            <Button type="submit" variant="primary" size="lg" className="w-full">
              Send Message
            </Button>
          </form>
        </div>

        <!-- Contact Info Cards -->
        <div>
          <SectionTitle title="Get in Touch" size="md" spacing="normal" />

          <div class="mb-6 text-center">
            <InfoCard
              icon="envelope"
              title="Email Us"
              description="For general inquiries: hello@minimal.lat"
              interactive={true}
            />
          </div>

          <div class="mb-6 text-center">
            <InfoCard
              icon="wrench"
              title="Technical Support"
              description="Need help with integration? support@minimal.lat"
              interactive={true}
            />
          </div>
        </div>
      </div>
    </ContentSection>

    <ContentSection background="secondary">
      <SectionTitle title="Frequently Asked Questions" centered={true} />
      <FAQ items={faqItems} />
    </ContentSection>
  </main>

  <Footer locale={locale} />
</BaseLayout>

<script>
  import { trackContactFormSubmit } from '@/scripts/analytics';

  const API_URL = import.meta.env.PUBLIC_BACKEND_URL || 'http://localhost:8000';
  const form = document.getElementById('contact-form') as HTMLFormElement;
  const submitBtn = form?.querySelector('button[type="submit"]') as HTMLButtonElement;
  const messageContainer = document.getElementById('form-message') as HTMLDivElement;
  const originalBtnText = submitBtn?.textContent || 'Send Message';

  function showMessage(type: 'success' | 'error', message: string) {
    if (!messageContainer) return;

    messageContainer.className = type === 'success'
      ? 'rounded-lg p-4 text-sm bg-green-50 border border-green-200 text-green-800'
      : 'rounded-lg p-4 text-sm bg-red-50 border border-red-200 text-red-800';

    messageContainer.innerHTML = message;
    messageContainer.classList.remove('hidden');
    messageContainer.scrollIntoView({ behavior: 'smooth', block: 'nearest' });
  }

  function hideMessage() {
    if (messageContainer) {
      messageContainer.classList.add('hidden');
    }
  }

  form?.addEventListener('submit', async (e) => {
    e.preventDefault();
    hideMessage();

    const formData = new FormData(form);
    const subject = formData.get('subject') as string;

    const payload = {
      full_name: formData.get('full_name'),
      email: formData.get('email'),
      company: formData.get('company') || '',
      website: formData.get('website') || '',
      subject: subject || 'other',
      message: formData.get('message'),
    };

    // Disable button and show loading state
    if (submitBtn) {
      submitBtn.disabled = true;
      submitBtn.textContent = 'Sending...';
    }

    try {
      const response = await fetch(`${API_URL}/api/contact/`, {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
        },
        body: JSON.stringify(payload),
      });

      const data = await response.json();

      if (response.ok) {
        // Track successful submission
        trackContactFormSubmit(subject || 'not_specified', '/contact');

        // Show success message
        showMessage('success', `
          <div class="flex items-start gap-3">
            <svg class="w-5 h-5 flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
            </svg>
            <div>
              <p class="font-medium">Message sent successfully!</p>
              <p class="mt-1 opacity-90">${data.message || "Thank you for reaching out. We'll get back to you soon."}</p>
            </div>
          </div>
        `);
        form.reset();
      } else {
        // Handle validation errors
        const fieldLabels: Record<string, string> = {
          full_name: 'Full Name',
          email: 'Email',
          company: 'Company',
          website: 'Website',
          subject: 'Subject',
          message: 'Message'
        };

        if (data.details) {
          const errorList = Object.entries(data.details)
            .map(([field, msgs]) => `<li><strong>${fieldLabels[field] || field}:</strong> ${(msgs as string[]).join(', ')}</li>`)
            .join('');
          showMessage('error', `
            <div class="flex items-start gap-3">
              <svg class="w-5 h-5 flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"></path>
              </svg>
              <div>
                <p class="font-medium">Please fix the following errors:</p>
                <ul class="mt-1 list-disc list-inside opacity-90">${errorList}</ul>
              </div>
            </div>
          `);
        } else {
          showMessage('error', `
            <div class="flex items-start gap-3">
              <svg class="w-5 h-5 flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"></path>
              </svg>
              <div>
                <p class="font-medium">Something went wrong</p>
                <p class="mt-1 opacity-90">${data.error || 'Please try again later.'}</p>
              </div>
            </div>
          `);
        }
      }
    } catch (error) {
      console.error('Contact form error:', error);
      showMessage('error', `
        <div class="flex items-start gap-3">
          <svg class="w-5 h-5 flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"></path>
          </svg>
          <div>
            <p class="font-medium">Connection error</p>
            <p class="mt-1 opacity-90">Please check your internet connection and try again.</p>
          </div>
        </div>
      `);
    } finally {
      // Re-enable button
      if (submitBtn) {
        submitBtn.disabled = false;
        submitBtn.textContent = originalBtnText;
      }
    }
  });
</script>
