---
interface Props {
  title: string;
  description: string;
  color?: string;
  className?: string;
}

const { title, description, color = 'var(--brand-purple-primary)', className = '' } = Astro.props;
---

<div class={`p-6 lg:p-8 bg-[var(--bg-tertiary)] rounded-xl border-l-4 shadow-sm ${className}`} style={`border-left-color: ${color}`}>
  <p class="text-[var(--text-secondary)] leading-relaxed text-base">
    <strong class="text-[var(--text-primary)] font-semibold">{title}:</strong> {description}
  </p>
</div>
