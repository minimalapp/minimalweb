---
interface Props {
  title: string;
  description: string;
  color?: string;
  className?: string;
}

const { title, description, color = 'var(--brand-purple-primary)', className = '' } = Astro.props;
---

<div class={`p-6 bg-bg-tertiary rounded-md border-l-4 shadow-md ${className}`} style={`border-left-color: ${color}`}>
  <p class="text-[var(--text-secondary)] leading-relaxed text-[15px]">
    <strong class="text-[var(--text-primary)] font-semibold">{title}:</strong> {description}
  </p>
</div>
