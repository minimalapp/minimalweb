---
import Icon from '@/components/Icon.astro';

interface Props {
  title: string;
  description: string;
  icon?: string;
  color?: string;
  className?: string;
}

const { title, description, icon, color = 'var(--brand-purple-primary)', className = '' } = Astro.props;
---

<div class={`bg-bg-tertiary p-6 rounded-md shadow-md transition-all duration-base hover:-translate-y-0.5 hover:shadow-lg ${className}`}>
  <div class="flex items-start gap-4">
    {icon && (
      <div class="flex-shrink-0 text-brand-purple-primary">
        <Icon name={icon} size="xl" />
      </div>
    )}
    <div class="flex-1 min-w-0">
      <h4 class="text-xl font-semibold text-[var(--text-primary)] mb-2">{title}</h4>
      <p class="text-[var(--text-secondary)] leading-relaxed text-[15px]">{description}</p>
    </div>
  </div>
</div>
