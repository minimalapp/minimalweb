---
interface Props {
  title: string;
  description?: string;
  background?: 'green' | 'purple' | 'secondary';
  className?: string;
}

const { title, description, background = 'green', className = '' } = Astro.props;

const bgClass = {
  green: 'bg-gradient-to-br from-[var(--brand-green)] to-[#059669]',
  purple: 'bg-gradient-to-br from-[var(--brand-purple-primary)] to-[var(--brand-purple-secondary)]',
  secondary: 'bg-[var(--bg-secondary)]'
}[background];

const textColor = background === 'secondary' ? 'text-[var(--text-primary)]' : 'text-white';
const descColor = background === 'secondary' ? 'text-[var(--text-secondary)]' : 'text-white/90';
---

<section class={`py-16 md:py-20 lg:py-24 ${bgClass} text-center ${className}`}>
  <div class="container mx-auto px-6 md:px-8 max-w-4xl">
    <h2 class={`text-3xl sm:text-4xl lg:text-5xl mb-4 lg:mb-6 font-bold ${textColor}`}>
      {title}
    </h2>
    {description && (
      <p class={`text-lg lg:text-xl mb-8 lg:mb-10 max-w-2xl mx-auto leading-relaxed ${descColor}`}>
        {description}
      </p>
    )}
    <slot />
  </div>
</section>
