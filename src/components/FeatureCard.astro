---
/**
 * FeatureCard Component
 *
 * A card component for displaying features with SVG icons from the centralized icon library.
 * Now uses the Icon component for consistent rendering across the site.
 *
 * @param icon - Icon identifier from the icon library (e.g., 'rocket', 'paint-brush', 'chart-bar')
 * @param title - Card title
 * @param description - Card description text (optional)
 * @param className - Additional CSS classes
 */

import Icon from '@/components/Icon.astro';

interface Props {
  icon?: string;
  title: string;
  description?: string;
  className?: string;
  href?: string;
  comingSoon?: boolean;
}

const { icon, title, description, className = '', href, comingSoon = false } = Astro.props;

const Component = href ? 'a' : 'div';
const linkProps = href ? { href } : {};
---

<Component class={`relative block bg-bg-tertiary p-6 rounded-md shadow-md transition-all duration-base hover:-translate-y-0.5 hover:shadow-lg overflow-visible ${href ? 'cursor-pointer' : ''} ${className}`} {...linkProps}>
  {comingSoon && (
    <span class="coming-soon-badge">Coming soon</span>
  )}
  {icon && (
    <div class="mb-4 text-brand-purple-primary">
      <Icon name={icon} size="xl" />
    </div>
  )}
  <h3 class="text-2xl mb-3 text-[var(--text-primary)] font-semibold">
    {title}
  </h3>
  {description && (
    <p class="text-[var(--text-tertiary)] leading-relaxed text-[15px]">
      {description}
    </p>
  )}
  <slot />
</Component>

<style is:global>
  .coming-soon-badge {
    @apply text-[10px] font-semibold px-2.5 py-1 rounded-md whitespace-nowrap uppercase tracking-wider;
    position: absolute;
    top: -8px;
    right: -8px;
    z-index: 10;
    background: linear-gradient(135deg, #7c3aed 0%, #6366f1 50%, #7c3aed 100%);
    color: #ffffff;
    border: 1px solid #8b5cf6;
    box-shadow: 0 2px 8px rgba(124, 58, 237, 0.4);
    overflow: hidden;
  }

  .coming-soon-badge::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(
      90deg,
      transparent,
      rgba(255, 255, 255, 0.3),
      transparent
    );
    animation: shimmer 2s infinite;
  }

  @keyframes shimmer {
    0% { left: -100%; }
    100% { left: 100%; }
  }
</style>
