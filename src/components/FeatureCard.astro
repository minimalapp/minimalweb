---
/**
 * FeatureCard Component
 *
 * A card component for displaying features with SVG icons from the centralized icon library.
 * Now uses the Icon component for consistent rendering across the site.
 *
 * @param icon - Icon identifier from the icon library (e.g., 'rocket', 'paint-brush', 'chart-bar')
 * @param title - Card title
 * @param description - Card description text (optional)
 * @param className - Additional CSS classes
 */

import Icon from '@/components/Icon.astro';

interface Props {
  icon?: string;
  title: string;
  description?: string;
  className?: string;
  href?: string;
}

const { icon, title, description, className = '', href } = Astro.props;

const Component = href ? 'a' : 'div';
const linkProps = href ? { href } : {};
---

<Component class={`block bg-bg-tertiary p-6 rounded-md shadow-md transition-all duration-base hover:-translate-y-0.5 hover:shadow-lg ${href ? 'cursor-pointer' : ''} ${className}`} {...linkProps}>
  {icon && (
    <div class="mb-4 text-brand-purple-primary">
      <Icon name={icon} size="xl" />
    </div>
  )}
  <h3 class="text-2xl mb-3 text-[var(--text-primary)] font-semibold">
    {title}
  </h3>
  {description && (
    <p class="text-[var(--text-tertiary)] leading-relaxed text-[15px]">
      {description}
    </p>
  )}
  <slot />
</Component>
