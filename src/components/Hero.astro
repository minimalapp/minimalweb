---
import DemoComparison from './DemoComparison.astro';
import type { Locale } from '@/i18n/utils';

export interface Props {
  title: string;
  subtitle: string;
  inputPlaceholder: string;
  buttonText: string;
  locale: Locale;
}

const { title, subtitle, inputPlaceholder, buttonText, locale } = Astro.props;
---

<section class="hero" id="mainHero" style="opacity: 0;">
  <div class="hero-content">
    <div class="hero-text">
      <h1 class="hero-title" set:html={title}></h1>
      <p class="hero-subtitle">{subtitle}</p>
      <div class="hero-input-group">
        <input
          type="url"
          placeholder={inputPlaceholder}
          class="hero-input url-input"
          aria-label="Website URL"
        />
        <button class="hero-button cta-button">{buttonText}</button>
      </div>
    </div>
    <div class="hero-visual">
      <DemoComparison locale={locale} />
    </div>
  </div>
</section>

<style>
  .hero {
    padding: 2rem var(--section-padding-left) 5rem var(--section-padding-right);
    text-align: center;
    background: linear-gradient(180deg, #f7fafc 0%, #ffffff 100%);
    position: relative;
    overflow: hidden;
  }

  @media (min-width: 768px) {
    .hero {
      padding-top: 3rem;
      padding-bottom: 6rem;
    }
  }

  @media (min-width: 1024px) {
    .hero {
      padding-bottom: 7rem;
    }
  }

  .hero-content {
    max-width: 1400px;
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    gap: 3rem;
  }

  .hero-text {
    text-align: center;
  }

  .hero-visual {
    width: 100%;
  }

  @media (min-width: 1024px) {
    .hero-content {
      display: grid;
      grid-template-columns: 1fr 1.2fr;
      gap: 4rem;
      align-items: center;
    }

    .hero-text {
      text-align: left;
    }
  }

  .hero-title {
    font-size: clamp(1.75rem, 5.5vw, 4.5rem);
    line-height: 1.15;
    margin-bottom: 2rem;
    font-weight: 700;
    letter-spacing: -0.02em;
  }

  /* Ensure line breaks are preserved even on small screens */
  .hero-title :global(br) {
    display: block;
    content: "";
  }

  .hero-title :global(.highlight) {
    background: linear-gradient(
      90deg,
      #FF5757 0%,
      #FFA500 16.66%,
      #FFD700 33.33%,
      #4CAF50 50%,
      #2196F3 66.66%,
      #3F51B5 83.33%,
      #FF5757 100%
    );
    background-size: 300% 100%;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    animation: rainbowSlide 6s linear infinite;
    display: inline;
  }

  /* Specific font size adjustments for better readability on small screens */
  @media (max-width: 480px) {
    .hero-title {
      font-size: clamp(1.5rem, 7vw, 2rem);
      line-height: 1.2;
    }
  }

  @media (min-width: 481px) and (max-width: 768px) {
    .hero-title {
      font-size: clamp(2rem, 6vw, 3rem);
    }
  }

  @media (min-width: 769px) and (max-width: 1024px) {
    .hero-title {
      font-size: clamp(2.5rem, 5.5vw, 3.5rem);
    }
  }

  @keyframes rainbowSlide {
    0% {
      background-position: 0% 50%;
    }
    100% {
      background-position: 300% 50%;
    }
  }

  .hero-subtitle {
    font-size: clamp(1.125rem, 2.5vw, 1.625rem);
    color: var(--text-light);
    margin-bottom: 2.5rem;
    line-height: 1.6;
    max-width: 90%;
  }

  @media (min-width: 1024px) {
    .hero-subtitle {
      max-width: 100%;
    }
  }

  .hero-input-group {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    max-width: 600px;
    margin: 0 auto;
  }

  .hero-input {
    padding: 1rem 1.5rem;
    border: 2px solid #e2e8f0;
    border-radius: 50px;
    font-size: 1rem;
    transition: border-color 0.3s;
    width: 100%;
  }

  .hero-input:focus {
    outline: none;
    border-color: var(--brand-blue);
  }

  .hero-button {
    padding: 1rem 2.5rem;
    background: var(--gradient-primary);
    color: white;
    border: none;
    border-radius: 50px;
    font-size: 1.1rem;
    font-weight: 600;
    cursor: pointer;
    transition: transform 0.3s, box-shadow 0.3s;
  }

  .hero-button:hover {
    transform: translateY(-2px);
    box-shadow: var(--shadow-hover);
  }

  @media (min-width: 640px) {
    .hero-input-group {
      flex-direction: row;
    }

    .hero-input {
      flex: 1;
    }

    .hero-button {
      white-space: nowrap;
    }
  }
</style>
