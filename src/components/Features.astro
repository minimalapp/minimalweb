---
import type { Locale } from '@/i18n/utils';
import IconFeatureCard from '@/components/IconFeatureCard.astro';
import { icons } from '@/lib/icons';

export interface FeatureItem {
  icon: string;
  title: string;
  description: string;
}

export interface Props {
  title: string;
  items: FeatureItem[];
  locale: Locale;
}

const { title, items, locale } = Astro.props;
---

<section
  class="section-padding bg-bg-primary"
  id={locale === 'es' ? 'producto' : 'product'}
>
  <div class="mx-auto max-w-container">
    <h2 class="section-title">
      {title}
    </h2>
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
      {items.map((item) => (
        <IconFeatureCard
          icon={icons[item.icon] || icons.palette}
          iconType="svg"
          title={item.title}
          description={item.description}
          centered={true}
          variant="tertiary"
        />
      ))}
    </div>
  </div>
</section>
