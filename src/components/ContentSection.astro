---
interface Props {
  background?: 'primary' | 'secondary';
  maxWidth?: 'sm' | 'md' | 'lg' | 'xl' | '2xl' | 'full';
  className?: string;
  id?: string;
}

const { background = 'primary', maxWidth = 'xl', className = '', id } = Astro.props;

const bgClass = background === 'secondary' ? 'bg-[var(--bg-secondary)]' : 'bg-[var(--bg-primary)]';
const maxWidthClass = {
  sm: 'max-w-3xl',
  md: 'max-w-4xl',
  lg: 'max-w-5xl',
  xl: 'max-w-6xl',
  '2xl': 'max-w-7xl',
  full: 'max-w-full'
}[maxWidth];
---

<section id={id} class={`section-padding ${bgClass} ${className}`}>
  <div class={`mx-auto ${maxWidthClass}`}>
    <slot />
  </div>
</section>
