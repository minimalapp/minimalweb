---
interface Props {
  title: string;
  size?: 'sm' | 'md' | 'lg';
  centered?: boolean;
  spacing?: 'tight' | 'normal' | 'relaxed';
  as?: 'h1' | 'h2' | 'h3';
  className?: string;
}

const {
  title,
  size = 'lg',
  centered = false,
  spacing = 'normal',
  as: Tag = 'h2',
  className = ''
} = Astro.props;

// Size mappings following Tailwind and Astro best practices
const sizeClasses = {
  sm: 'text-xl lg:text-2xl',
  md: 'text-2xl lg:text-3xl',
  lg: 'text-3xl lg:text-4xl'
};

// Spacing mappings for consistent bottom margins
const spacingClasses = {
  tight: 'mb-4',
  normal: 'mb-8',
  relaxed: 'mb-12'
};

// Build class string
const classes = [
  sizeClasses[size],
  spacingClasses[spacing],
  'text-[var(--text-primary)]',
  'font-bold',
  centered ? 'text-center' : '',
  className
].filter(Boolean).join(' ');
---

<Tag class={classes}>
  {title}
</Tag>
