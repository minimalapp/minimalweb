---
interface Props {
  href: string;
  icon: string;
  title: string;
  description: string;
  className?: string;
}

const { href, icon, title, description, className = '' } = Astro.props;
---

<a
  href={href}
  class={`flex flex-col items-center text-center bg-[var(--bg-primary)] border border-[var(--border-primary)] rounded-xl p-6 lg:p-8 shadow-sm no-underline transition-all duration-200 hover:-translate-y-1 hover:shadow-lg hover:border-[var(--brand-green)] ${className}`}
>
  <div class="text-5xl mb-4">
    {icon}
  </div>
  <h3 class="text-xl text-[var(--text-primary)] font-semibold mb-2">
    {title}
  </h3>
  <p class="text-base text-[var(--text-secondary)]">
    {description}
  </p>
</a>
