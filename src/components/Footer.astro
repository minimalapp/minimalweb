---
import type { Locale } from '@/i18n/utils';
import commonTranslations from '@/i18n/common.json';

export interface Props {
  locale: Locale;
}

const { locale } = Astro.props;
const t = commonTranslations[locale];

// Determine base path for links
const basePath = locale === 'es' ? '/es' : '';

// Social media icons (Heroicons outline)
const socialIcons = {
  twitter: `<svg xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 24 24"><path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/></svg>`,
