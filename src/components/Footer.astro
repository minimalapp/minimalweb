---
import type { Locale } from '@/i18n/utils';
import commonTranslations from '@/i18n/common.json';

export interface Props {
  locale: Locale;
}

const { locale } = Astro.props;
const t = commonTranslations[locale];

// Determine base path for links
const basePath = locale === 'es' ? '/es' : '';

// Social media icons (Heroicons outline)
const socialIcons = {
  twitter: `<svg xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 24 24"><path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/></svg>`,
  github: `<svg xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 24 24"><path d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z"/></svg>`,
  linkedin: `<svg xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 24 24"><path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/></svg>`
};

// Trust badge icons
const trustIcons = {
  ssl: `<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M16.5 10.5V6.75a4.5 4.5 0 1 0-9 0v3.75m-.75 11.25h10.5a2.25 2.25 0 0 0 2.25-2.25v-6.75a2.25 2.25 0 0 0-2.25-2.25H6.75a2.25 2.25 0 0 0-2.25 2.25v6.75a2.25 2.25 0 0 0 2.25 2.25Z" /></svg>`,
  gdpr: `<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75 11.25 15 15 9.75m-3-7.036A11.959 11.959 0 0 1 3.598 6 11.99 11.99 0 0 0 3 9.749c0 5.592 3.824 10.29 9 11.623 5.176-1.332 9-6.03 9-11.622 0-1.31-.21-2.571-.598-3.751h-.152c-3.196 0-6.1-1.248-8.25-3.285Z" /></svg>`,
  security: `<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75 11.25 15 15 9.75m-3-7.036A11.959 11.959 0 0 1 3.598 6 11.99 11.99 0 0 0 3 9.749c0 5.592 3.824 10.29 9 11.623 5.176-1.332 9-6.03 9-11.622 0-1.31-.21-2.571-.598-3.751h-.152c-3.196 0-6.1-1.248-8.25-3.285Z" /></svg>`
};
---

<footer class="py-12 md:py-14 px-4 md:px-6 lg:px-8 bg-[#0F1419] text-white">
  <div class="max-w-[1100px] mx-auto mb-6 grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 md:gap-8">
    <div class="footer-column">
      <h4 class="mb-3 text-lg text-white font-semibold">{t.footer.product}</h4>
      <ul class="list-none p-0 m-0">
        <li class="mb-1">
          <a href={`${basePath}/features`} class="text-[#9CA3AF] no-underline transition-all duration-base text-[14px] min-h-[44px] inline-block py-1 leading-normal hover:text-brand-purple-light hover:translate-x-0.5 focus-visible:outline-2 focus-visible:outline-brand-purple-primary focus-visible:outline-offset-2">
            {t.footer.features}
          </a>
        </li>
        <li class="mb-1">
          <a href={`${basePath}/integration`} class="text-[#9CA3AF] no-underline transition-all duration-base text-[14px] min-h-[44px] inline-block py-1 leading-normal hover:text-brand-purple-light hover:translate-x-0.5 focus-visible:outline-2 focus-visible:outline-brand-purple-primary focus-visible:outline-offset-2">
            {t.footer.integration}
          </a>
        </li>
      </ul>
    </div>
    <div class="footer-column">
      <h4 class="mb-3 text-lg text-white font-semibold">{t.footer.company}</h4>
      <ul class="list-none p-0 m-0">
        <li class="mb-1">
          <a href={`${basePath}/about`} class="text-[#9CA3AF] no-underline transition-all duration-base text-[14px] min-h-[44px] inline-block py-1 leading-normal hover:text-brand-purple-light hover:translate-x-0.5 focus-visible:outline-2 focus-visible:outline-brand-purple-primary focus-visible:outline-offset-2">
            {t.footer.about}
          </a>
        </li>
        <li class="mb-1">
          <a href={`${basePath}/careers`} class="text-[#9CA3AF] no-underline transition-all duration-base text-[14px] min-h-[44px] inline-block py-1 leading-normal hover:text-brand-purple-light hover:translate-x-0.5 focus-visible:outline-2 focus-visible:outline-brand-purple-primary focus-visible:outline-offset-2">
            {t.footer.careers}
          </a>
        </li>
        <li class="mb-1">
          <a href={`${basePath}/contact`} class="text-[#9CA3AF] no-underline transition-all duration-base text-[14px] min-h-[44px] inline-block py-1 leading-normal hover:text-brand-purple-light hover:translate-x-0.5 focus-visible:outline-2 focus-visible:outline-brand-purple-primary focus-visible:outline-offset-2">
            {t.footer.contact}
          </a>
        </li>
      </ul>
    </div>
    <div class="footer-column">
      <h4 class="mb-3 text-lg text-white font-semibold">{t.footer.resources}</h4>
      <ul class="list-none p-0 m-0">
        <li class="mb-1">
          <a href={`${basePath}/help`} class="text-[#9CA3AF] no-underline transition-all duration-base text-[14px] min-h-[44px] inline-block py-1 leading-normal hover:text-brand-purple-light hover:translate-x-0.5 focus-visible:outline-2 focus-visible:outline-brand-purple-primary focus-visible:outline-offset-2">
            {t.footer.help}
          </a>
        </li>
        <li class="mb-1">
          <a href={`${basePath}/community`} class="text-[#9CA3AF] no-underline transition-all duration-base text-[14px] min-h-[44px] inline-block py-1 leading-normal hover:text-brand-purple-light hover:translate-x-0.5 focus-visible:outline-2 focus-visible:outline-brand-purple-primary focus-visible:outline-offset-2">
            {t.footer.community}
          </a>
        </li>
      </ul>
    </div>
    <div class="footer-column">
      <h4 class="mb-3 text-lg text-white font-semibold">{t.footer.legal}</h4>
      <ul class="list-none p-0 m-0">
        <li class="mb-1">
          <a href={`${basePath}/terms`} class="text-[#9CA3AF] no-underline transition-all duration-base text-[14px] min-h-[44px] inline-block py-1 leading-normal hover:text-brand-purple-light hover:translate-x-0.5 focus-visible:outline-2 focus-visible:outline-brand-purple-primary focus-visible:outline-offset-2">
            {t.footer.terms}
          </a>
        </li>
        <li class="mb-1">
          <a href={`${basePath}/privacy`} class="text-[#9CA3AF] no-underline transition-all duration-base text-[14px] min-h-[44px] inline-block py-1 leading-normal hover:text-brand-purple-light hover:translate-x-0.5 focus-visible:outline-2 focus-visible:outline-brand-purple-primary focus-visible:outline-offset-2">
            {t.footer.privacy}
          </a>
        </li>
        <li class="mb-1">
          <a href={`${basePath}/gdpr`} class="text-[#9CA3AF] no-underline transition-all duration-base text-[14px] min-h-[44px] inline-block py-1 leading-normal hover:text-brand-purple-light hover:translate-x-0.5 focus-visible:outline-2 focus-visible:outline-brand-purple-primary focus-visible:outline-offset-2">
            {t.footer.gdpr}
          </a>
        </li>
        <li class="mb-1">
          <a href={`${basePath}/security`} class="text-[#9CA3AF] no-underline transition-all duration-base text-[14px] min-h-[44px] inline-block py-1 leading-normal hover:text-brand-purple-light hover:translate-x-0.5 focus-visible:outline-2 focus-visible:outline-brand-purple-primary focus-visible:outline-offset-2">
            {t.footer.security}
          </a>
        </li>
      </ul>
    </div>
  </div>

  <!-- Social Media & Language Selector Section -->
  <div class="max-w-content mx-auto mb-6 pt-6 border-t border-white/10 flex flex-col md:flex-row gap-4 items-center md:justify-between">
    <div class="flex gap-3">
      <a href="https://twitter.com/" aria-label="Twitter" class="w-10 h-10 inline-flex items-center justify-center text-[#9CA3AF] bg-white/5 rounded-sm transition-all duration-base hover:text-white hover:bg-brand-purple-primary hover:-translate-y-0.5 focus-visible:outline-2 focus-visible:outline-brand-purple-primary focus-visible:outline-offset-2" set:html={socialIcons.twitter}></a>
      <a href="https://github.com/" aria-label="GitHub" class="w-10 h-10 inline-flex items-center justify-center text-[#9CA3AF] bg-white/5 rounded-sm transition-all duration-base hover:text-white hover:bg-brand-purple-primary hover:-translate-y-0.5 focus-visible:outline-2 focus-visible:outline-brand-purple-primary focus-visible:outline-offset-2" set:html={socialIcons.github}></a>
      <a href="https://linkedin.com/company/" aria-label="LinkedIn" class="w-10 h-10 inline-flex items-center justify-center text-[#9CA3AF] bg-white/5 rounded-sm transition-all duration-base hover:text-white hover:bg-brand-purple-primary hover:-translate-y-0.5 focus-visible:outline-2 focus-visible:outline-brand-purple-primary focus-visible:outline-offset-2" set:html={socialIcons.linkedin}></a>
    </div>

    <div class="flex items-center gap-2 text-[14px]">
      <a href="/" class={`text-[#9CA3AF] no-underline py-2 px-4 rounded-sm transition-all duration-base hover:text-white hover:bg-white/5 focus-visible:outline-2 focus-visible:outline-brand-purple-primary focus-visible:outline-offset-2 ${locale === 'en' ? 'text-brand-purple-primary font-semibold' : ''}`}>English</a>
      <span class="text-white/30">|</span>
      <a href="/es/" class={`text-[#9CA3AF] no-underline py-2 px-4 rounded-sm transition-all duration-base hover:text-white hover:bg-white/5 focus-visible:outline-2 focus-visible:outline-brand-purple-primary focus-visible:outline-offset-2 ${locale === 'es' ? 'text-brand-purple-primary font-semibold' : ''}`}>Espa√±ol</a>
    </div>

    <div class="flex gap-4 flex-wrap justify-center">
      <div class="flex items-center gap-2 py-2 px-4 bg-white/5 rounded-sm border border-white/10" title="SSL Secured">
        <span class="w-5 h-5 text-brand-green inline-flex" set:html={trustIcons.ssl}></span>
        <span class="text-[13px] text-[#9CA3AF] font-medium">SSL</span>
      </div>
      <div class="flex items-center gap-2 py-2 px-4 bg-white/5 rounded-sm border border-white/10" title="GDPR Compliant">
        <span class="w-5 h-5 text-brand-green inline-flex" set:html={trustIcons.gdpr}></span>
        <span class="text-[13px] text-[#9CA3AF] font-medium">GDPR</span>
      </div>
      <div class="flex items-center gap-2 py-2 px-4 bg-white/5 rounded-sm border border-white/10" title="Enterprise Security">
        <span class="w-5 h-5 text-brand-green inline-flex" set:html={trustIcons.security}></span>
        <span class="text-[13px] text-[#9CA3AF] font-medium">Secure</span>
      </div>
    </div>
  </div>

  <div class="text-center mt-4 pt-6 border-t border-white/10 text-[#9CA3AF] text-sm">
    <p class="m-0">{t.footer.copyright}</p>
  </div>
</footer>

<style>
  /* SVG sizing for social icons */
  a :global(svg) {
    width: 20px;
    height: 20px;
  }

  /* SVG sizing for trust icons */
  .trust-icon :global(svg) {
    width: 100%;
    height: 100%;
  }
</style>
