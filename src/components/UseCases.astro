---
export interface UseCase {
  title: string;
  icon: string;
  description: string;
  benefits: string[];
}

export interface Props {
  title: string;
  subtitle: string;
  cases: UseCase[];
}

const { title, subtitle, cases } = Astro.props;

// SVG icon mapping - Heroicons outline
