---
interface Props {
  title: string;
  subtitle?: string;
  className?: string;
}

const { title, subtitle, className = '' } = Astro.props;
---

<section class={`py-24 sm:py-32 bg-gradient-to-b from-[var(--bg-secondary)] to-[var(--bg-primary)] text-center ${className}`}>
  <div class="container mx-auto px-6 md:px-8">
    <h1 class="text-4xl sm:text-5xl lg:text-6xl mb-4 text-[var(--text-primary)] font-bold">
      {title}
    </h1>
    {subtitle && (
      <p class="text-lg sm:text-xl lg:text-2xl text-[var(--text-secondary)] max-w-3xl mx-auto leading-relaxed">
        {subtitle}
      </p>
    )}
    <slot />
  </div>
</section>
