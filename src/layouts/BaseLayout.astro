      "operatingSystem": "Web",
      "description": "Transform your website into an intelligent conversational AI experience",
      "url": "https://minimal.lat",
      "offers": {
        "@type": "AggregateOffer",
        "lowPrice": "19",
        "highPrice": "39",
        "priceCurrency": "USD",
